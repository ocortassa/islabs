<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d | %-5p | %X{tradeInfo} | [[§THREAD_ID§]] | [%c{1}] | %m %n"/>
        </layout>
    </appender>

    <appender name="ALL" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <param name="Threshold" value="DEBUG"/>
        <!--<param name="File" value="${logfile.path}/islabs.log"/>-->
        <param name="File" value="/home/omar/src/islabs.log"/>
        <param name="Encoding" value="UTF-8"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="it.infogroup.trade.common.logging.TradePatternLayout">
            <param name="ConversionPattern" value="%d | %-5p | %X{tradeInfo} | [[§THREAD_ID§]] | [%c{1}] | %m %n"/>
        </layout>
    </appender>

    <logger name="it.unito.di.islabs">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="it.unito.di.islabs">
        <level value="DEBUG"/>
        <appender-ref ref="ALL"/>
    </logger>

</log4j:configuration>